<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Bangers&family=Fira+Code:wght@500&family=Fredericka+the+Great&family=Indie+Flower&family=Kirang+Haerang&family=Rye&display=swap"
    rel="stylesheet">
</head>

<style>
  * {
    background-color: black;
    color: white;
    font-family: 100%;
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  .container {
    height: 100vh;
    width: 100vh;
    display: grid;
    place-content: center;
  }

  .dpm {
    font-size: 10rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    top: 50%;
    right: 50%;
    transform: translate(50%, -50%);
    width: 30rem;
  }

  /** Css Shadow **/

  .dpm .letter {
    text-shadow: 0 0 0.4rem white, 0 0 0.5rem white, 0 0 0.25rem white;
    mix-blend-mode: screen;
  }

  /** Footer **/
  .footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    font-family: Fira Code;
    text-align: center;
    font-size: 75%;
  }
</style>

<body>
  <div class="container">
    <div class="dpm">
      <span class="letter">D</span>
      <span class="letter">P</span>
      <span class="letter">M</span>
    </div>
  </div>
  <footer class="footer">
    <strong>DPM</strong> by <a href="https://github.com/dpmland/dpm">DPM Contributors</a>. The source code is licensed
    <a href="https://www.gnu.org/licenses/gpl-3.0.en.html">GPL-3.0 license</a>. The website content
    is licensed <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/">CC BY NC SA 4.0</a>.
  </footer>

  <script>
    // Set the Fonts
    const fonts = [
      'Bangers',
      'Amatic SC',
      'Fredericka the Great',
      'Indie Flower',
      'Kirang Haerang',
      'Rye',
    ];

    const letters = document.getElementsByClassName('letter')
    let count = 0

    function rollIntro() {
      for (const i of letters) {
        i.style.fontFamily = fonts[Math.floor(Math.random() * fonts.length)]
      }
    }

    const introAnimation = setInterval(function () {
      rollIntro()
      if (count > 500)
        clearInterval(introAnimation)
      count++;
    }, 900)
  </script>
</body>

</html>