{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "isolatedModules": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["@astrojs/image/client"],
    "baseUrl": ".",
    "paths": {
      "@docs/*": ["docs/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"]
    }
  }
}
